<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	
	<parent>
		<groupId>org.semanticweb.wolpertinger</groupId>
		<artifactId>wolpertinger-parent</artifactId>
		<version>1.0.0-SNAPSHOT</version>
	</parent>

	<groupId>org.semanticweb.wolpertinger</groupId>
	<artifactId>wolpertinger-protege</artifactId>
	<version>0.1.0-SNAPSHOT</version>
	<name>Wolpertinger Reasoner Protege Plug-in</name> 
	<description>A Wolpertinger Reasoner Plug-in for the Protege Ontology Editor.</description> 


	<packaging>bundle</packaging>

	
	<dependencies>
		<!-- <dependency>
		    	<groupId>org.sonatype.oss</groupId>
                   	<artifactId>oss-parent</artifactId>
                   	<version>7</version>
		</dependency> -->
		<dependency>
			<groupId>org.semanticweb.wolpertinger</groupId>
			<artifactId>wolpertinger-reasoner</artifactId>
			<version>1.0</version>
		</dependency>


		<dependency>
			<groupId>edu.stanford.protege</groupId>
			<artifactId>org.protege.common</artifactId>
			<version>5.0.0-beta-17</version>
			<scope>provided</scope>
		</dependency>

        <dependency>
			<groupId>edu.stanford.protege</groupId>
			<artifactId>org.protege.editor.core.application</artifactId>
			<version>5.0.0-beta-17</version>
			<scope>provided</scope>
        </dependency>

        <dependency>
    		<groupId>edu.stanford.protege</groupId>
    		<artifactId>org.protege.editor.owl</artifactId>
    		<version>5.0.0-beta-17</version>
    		<scope>provided</scope>
		</dependency>
	</dependencies>

	<build>
		<plugins>
            		<plugin>
              			<groupId>org.apache.maven.plugins</groupId>
              			<artifactId>maven-compiler-plugin</artifactId>
              			<version>3.0</version>
              			<configuration>
                			<source>1.6</source>
                			<target>1.6</target>
              			</configuration>
            		</plugin>
            		<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<version>2.3.7</version>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Bundle-ClassPath>.</Bundle-ClassPath>
						<Bundle-SymbolicName>${project.artifactId};singleton:=true</Bundle-SymbolicName>
						<Bundle-Vendor>The Protege Development Team</Bundle-Vendor>
						<Import-Package>
							org.apache.log4j.*;version="[1.2,2)", 
							org.protege.editor.core.*;version="5.0.0-beta-17",
							org.protege.editor.owl.*;version="5.0.0-beta-17",
							*
						</Import-Package>
						<Include-Resource>./src/main/resources/plugin.xml, {maven-resources}</Include-Resource>
						<Private-Package>skeleton</Private-Package>
					</instructions>
					<executions>
						<execution>
							<id>bundle-manifest</id>
							<phase>install</phase>
							<goals>    
								<goal>manifest</goal>
							</goals>   
						</execution>
					</executions>
				</configuration>
           	 	</plugin>
            		<plugin>
             	 		<artifactId>maven-eclipse-plugin</artifactId>
              			<version>2.9</version>
              			<configuration>
                			<pde>true</pde>
              			</configuration>
            		</plugin>
			</plugins>
	</build>
	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>edu.stanford.protege</groupId>
				<artifactId>org.protege.editor.owl</artifactId>
				<version>5.0.0-beta-17</version>
			</dependency>
		</dependencies>
	</dependencyManagement>
</project>
